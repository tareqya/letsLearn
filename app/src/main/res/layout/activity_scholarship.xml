<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScholarshipActivity">

    <TextView
        android:id="@+id/scholarship_screen_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:text="المنح الدراسية"
        android:textSize="24sp"
        android:textColor="@color/black"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/scholarship_screen_RV_scholarships"
        android:layout_below="@+id/scholarship_screen_tv_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</RelativeLayout>